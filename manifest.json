{
	"manifest_version": 2,
	"name": "小皮球和小气筒",
	"version": "1.1.0",
	"description": "小皮球和小气筒",
	"icons":
	{
		"16": "img/icon.png",
		"48": "img/icon.png",
		"128": "img/icon.png"
	},
	"browser_action": 
	{
		"default_icon": "img/icon.png",
		"default_title": "小皮球便签",
		"default_popup": "popup.html"
	},
	"content_scripts": 
	[
		{
			"matches": ["<all_urls>"],
			"css": ["css/custom.css"],
			"run_at": "document_start"
		}
	],
	"permissions":
	[
		"contextMenus",
		"notifications",
		"storage"
	]
}